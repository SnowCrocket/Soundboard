<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafael.soundboard.MainActivity"
    android:background="#000000">

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text="Bike Horn"
        android:id="@+id/button2"
        android:background="@drawable/abc_scrubber_control_to_pressed_mtrl_005"
        android:backgroundTint="#0004ff"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:nestedScrollingEnabled="false"
        android:onClick="plays1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DA SAOONBORD"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#0011ff"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/button"
        android:background="@drawable/abc_scrubber_control_to_pressed_mtrl_005"
        android:backgroundTint="#0004ff"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:text="GONG"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:onClick="plays2" />

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text="NADE"
        android:id="@+id/button3"
        android:background="@drawable/abc_scrubber_control_to_pressed_mtrl_005"
        android:backgroundTint="#0004ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:onClick="plays4" />

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text="GUN"
        android:id="@+id/button4"
        android:background="@drawable/abc_scrubber_control_to_pressed_mtrl_005"
        android:backgroundTint="#0004ff"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:onClick="plays3" />

</RelativeLayout>
